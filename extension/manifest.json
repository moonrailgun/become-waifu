{
  "name": "Become Waifu",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "If you have no waifu, you can become her",
  "homepage_url": "https://github.com/moonrailgun/become-waifu",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Trans!"
  },
  "web_accessible_resources": [
    "vendor/*",
    "lib/*"
  ],
  "permissions": [
    "<all_urls>",
    "tabs",
    "webRequest",
    "webRequestBlocking"
  ]
}
